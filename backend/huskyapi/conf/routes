# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                           controllers.Application.index

# API
GET         /api/hotels/:cityId                             controllers.api.Hotel.find(cityId: Int)

GET         /api/airline/oneway/:start/:from                controllers.api.Airline.oneway(start: String, from: String)
GET         /api/airline/roundtrip/:start/:from/:back/:to   controllers.api.Airline.roundtrip(start: String, from: String, back: String, to: String)

POST        /api/pin/:roomId                                controllers.api.Room.pin(roomId: String)
DELETE      /api/pin/:roomId/pidId                          controllers.api.Room.unpin(roomId: String, pinId: String)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                               controllers.Assets.versioned(path="/public", file: Asset)
